echo               both
dimension          3
units              si
atom_modify        map array sort 0 0
atom_style         meso/multiphase
comm_modify    vel yes

#2D box
# domain size
variable          Lx equal 10
# smothing length
variable          h equal 1

variable          alpha equal 1.0

variable          nLx equal -${Lx}
region             box block 0 ${Lx} 0 ${Lx} ${nLx} ${Lx} units box

create_box         2 box

# run 
# maxima -b surfacetension.mac
# to get this file
include           in.atoms

set               type 1         mass 2
set               type 2         mass 1

set               type 1         meso_rho 1
set               type 2         meso_rho 1

pair_style         sph/rhosum/multiphase 1
pair_coeff         * *     ${h}

# do full time integration
fix                integrate_fix_full all  meso
compute            rho_peratom all meso_rho/atom

neighbor           0 bin
timestep           0

fix extra all print 1 "$(c_rho_peratom[1]) $(c_rho_peratom[2]) $(c_rho_peratom[3])" file outpt.dat screen no
run                1

